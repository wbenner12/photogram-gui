<h1>List of users</h1>

<form action="/add_user" method="post">
  <label for="username_input">Username</label>
  <input id="username_input" name="query_username" type="text">

  <button>
    Add user
  </button>
</form>

<br>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Username
    </th>

    <th></th>
  </tr>

  <% @list_of_users.each do |a_user| %>
    <tr>
      <td>
        <%= a_user.id %>
      </td>

      <td>
        <%= a_user.username %>
      </td>

      <td>
        <a href="/users/<%= a_user.username %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
