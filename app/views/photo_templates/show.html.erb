<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @the_photo.image%>">
  </dd>

  <dt>Caption</dt>
  <dd>
    <%= @the_photo.caption %>
  </dd>

  <dt>Owner</dt>
  <dd>
    <%= @the_photo.poster.username %>
  </dd>

  <dt>Posted</dt>
  <dd>
    <%= @the_photo.created_at %>
  </dd>

  <dt>Edit photo</dt>
  <dd>
    <form action="/update_photo/<%= @the_photo.id %>" method="post">
      <label for="browser_image">Image</label>
      <input id="browser_image" type="text" name="query_image" value="<%= @the_photo.image %>">

      <label for="browser_caption">Caption</label>
      <textarea name="query_caption" id="browser_caption"><%= @the_photo.caption %></textarea>

      <button>Update photo</button>
    </form>
  </dd>

  <dt>Delete photo</dt>
  <dd>
    <a href="/delete_photo/<%= @the_photo.id %>">
      Delete this photo
    </a>
  </dd>

</dl>

<h2>Comments</h2>

  <table>
    <tr>
      <th>Commenter</th>
      <th>Comment</th>
      <th>Posted</th>
    </tr>
  <% @the_photo.comments.each do |a_comment| %>
    <tr>
      <td>
        <%= a_comment.commenter.username %>
      </td>

      <td>
        <%= a_comment.body %>
      </td>

      <td>
        <%= a_comment.created_at %>
      </td>
    </tr>
    <% end %>
  </table>

<h3>Add a new comment</h3>
  <form action="/insert_comment" method="post">
    <label for="photo_id">Photo ID</label>
    <input id="photo_id" type="text" name="query_photo" value="<%= @the_photo.id%>">

    <label for="author_id">Author ID</label>
    <input id="author_id" type="text" name="query_author">

    <label for="comment_box">Comment</label>
    <textarea name="query_comment" id="comment_box"></textarea>

    <button>Add comment</button>
  </form>
